<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="myshelfie_view.gui.controllers.common_goals.CommonGoalController">
   <children>
      <StackPane>
         <children>
            <ImageView fx:id="image" fitWidth="600.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../images/common_goal_cards/1.jpg" />
               </image>
            </ImageView>
            <AnchorPane prefHeight="200.0" prefWidth="200.0">
               <children>
                  <ImageView fx:id="token" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" rotate="-8.0" visible="false" AnchorPane.rightAnchor="85.0" AnchorPane.topAnchor="110.0">
                     <image>
                        <Image url="@../../images/scoring_tokens/scoring.jpg" />
                     </image>
                  </ImageView>
               </children>
            </AnchorPane>
         </children>
      </StackPane>
      <Label fx:id="description" prefWidth="600.0" wrapText="true">
         <VBox.margin>
            <Insets top="32.0" />
         </VBox.margin>
      </Label>
   </children>
</VBox>
